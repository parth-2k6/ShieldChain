import { useState } from 'react';
import axios from 'axios';

export default function App() {
    const [contractCode, setContractCode] = useState('');
    const [report, setReport] = useState(null);
    const [loading, setLoading] = useState(false);

    const handleScan = async () => {
        setLoading(true);
        try {
            const response = await axios.post('https://your-railway-backend-url/scan', { contractCode });
            setReport(response.data);
        } catch (error) {
            setReport({ error: 'Failed to scan. Please check your contract.' });
        }
        setLoading(false);
    };

    return (
        <div className="min-h-screen bg-gray-900 text-white flex flex-col items-center p-6">
            <h1 className="text-2xl font-bold mb-4">ShieldChain - Smart Contract Security Scanner</h1>
            <textarea
                className="w-full max-w-2xl p-3 bg-gray-800 rounded"
                rows="8"
                placeholder="Paste your Solidity contract here..."
                value={contractCode}
                onChange={(e) => setContractCode(e.target.value)}
            ></textarea>
            <button
                className="mt-4 px-6 py-2 bg-blue-600 rounded hover:bg-blue-700"
                onClick={handleScan}
                disabled={loading}
            >
                {loading ? 'Scanning...' : 'Scan Contract'}
            </button>
            {report && (
                <pre className="mt-4 p-3 bg-gray-800 rounded w-full max-w-2xl overflow-auto">
                    {JSON.stringify(report, null, 2)}
                </pre>
            )}
        </div>
    );
}
