import React, { useState } from 'react';
import axios from 'axios';

const SmartContractScanner = () => {
  const [contractCode, setContractCode] = useState('');
  const [scanResult, setScanResult] = useState(null);
  const [loading, setLoading] = useState(false);

  const handleScan = async () => {
    setLoading(true);
    try {
      const response = await axios.post('http://localhost:5000/scan', { contractCode });
      setScanResult(response.data);
    } catch (error) {
      setScanResult({ error: 'Scan failed. Please check your contract code.' });
    }
    setLoading(false);
  };

  return (
    <div className="p-6 max-w-2xl mx-auto bg-gray-900 text-white rounded-lg shadow-lg">
      <h1 className="text-2xl font-bold mb-4">Smart Contract Security Scanner</h1>
      <textarea
        className="w-full h-40 p-2 bg-gray-800 border border-gray-700 rounded"
        placeholder="Paste your Solidity code here..."
        value={contractCode}
        onChange={(e) => setContractCode(e.target.value)}
      />
      <button
        className="w-full bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 mt-3 rounded"
        onClick={handleScan}
        disabled={loading}
      >
        {loading ? 'Scanning...' : 'Scan Contract'}
      </button>
      {scanResult && (
        <pre className="mt-4 p-2 bg-gray-800 text-green-400 border border-gray-700 rounded overflow-auto">
          {JSON.stringify(scanResult, null, 2)}
        </pre>
      )}
    </div>
  );
};

export default SmartContractScanner;
